					$final = "Order ID: " + $('#ordernumbers').val() + '\n' + 'Request: ' +
						$TheRequest + '\n\n' + $('#message').val();
				} else {
					$final = $('#message').val();
				}
				$('#alldata').val($final);
				$('.subject:checked').val($FinalSubject);
				$('#ticketsend').submit();
			});
		});
	});
</script>