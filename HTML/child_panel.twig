<main class="page-wrapper shrink grow">
  <section class="max-w-full mx-auto px-4 py-10 space-y-10">
    <!-- Header Card -->
    <div class="bg-white dark:bg-dark-secondary border border-gray-200 dark:border-gray-700 rounded-2xl shadow-sm p-6 transition-colors duration-200">
      <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
        <div class="flex items-start gap-4">
          <span class="flex h-12 w-12 items-center justify-center rounded-2xl bg-primary-500/10 dark:bg-primary-500/20 text-primary-500 dark:text-primary-400 flex-shrink-0">
            <svg width="25" height="23" viewBox="0 0 25 23" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M8.125 5C8.125 6.38071 7.00571 7.5 5.625 7.5C4.24429 7.5 3.125 6.38071 3.125 5C3.125 3.61929 4.24429 2.5 5.625 2.5C7.00571 2.5 8.125 3.61929 8.125 5ZM0.625 5C0.625 7.76143 2.86357 10 5.625 10C8.38643 10 10.625 7.76143 10.625 5C10.625 2.23857 8.38643 0 5.625 0C2.86357 0 0.625 2.23857 0.625 5ZM8.75 16.875C8.75 15.1491 7.35089 13.75 5.625 13.75C3.89911 13.75 2.5 15.1491 2.5 16.875V20H8.75V16.875ZM11.25 22.5H0V16.875C0 13.7684 2.5184 11.25 5.625 11.25C8.7316 11.25 11.25 13.7684 11.25 16.875V22.5ZM21.875 5C21.875 6.38071 20.7558 7.5 19.375 7.5C17.9942 7.5 16.875 6.38071 16.875 5C16.875 3.61929 17.9942 2.5 19.375 2.5C20.7558 2.5 21.875 3.61929 21.875 5ZM14.375 5C14.375 7.76143 16.6136 10 19.375 10C22.1364 10 24.375 7.76143 24.375 5C24.375 2.23857 22.1364 0 19.375 0C16.6136 0 14.375 2.23857 14.375 5ZM22.5 16.875C22.5 15.1491 21.1009 13.75 19.375 13.75C17.6491 13.75 16.25 15.1491 16.25 16.875V20H22.5V16.875ZM13.75 20V16.875C13.75 13.7684 16.2684 11.25 19.375 11.25C22.4816 11.25 25 13.7684 25 16.875V22.5H13.75V20Z" fill="currentColor"/>
            </svg>
          </span>
          <div class="space-y-1">
            <h1 class="text-2xl font-semibold text-gray-900 dark:text-gray-100">Child Panel List</h1>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Review every child panel connected to your account and manage renewal or admin access with ease.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Card -->
    <div class="bg-white dark:bg-dark-secondary border border-gray-200 dark:border-gray-700 rounded-2xl shadow-sm p-6 sm:p-8 space-y-6 transition-colors duration-200">
      {% if error or success or renew or restore %}
        <div class="space-y-4">
          {% if error %}
            <div class="relative rounded-xl border border-red-200 dark:border-red-900/50 bg-red-50 dark:bg-red-900/20 p-4 text-red-800 dark:text-red-300 {% if site['rtl'] %} rtl-alert {% endif %}">
              <button type="button" class="absolute top-2 right-2 text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-200 focus:outline-none focus:ring-2 focus:ring-red-500 rounded-lg p-1 transition-colors" data-dismiss="alert" aria-label="Close">&times;</button>
              {{ errorMessage }}
            </div>
          {% endif %}
          {% if success %}
            <div class="relative rounded-xl border border-green-200 dark:border-green-900/50 bg-green-50 dark:bg-green-900/20 p-4 text-green-800 dark:text-green-300 {% if site['rtl'] %} rtl-alert {% endif %}">
              <button type="button" class="absolute top-2 right-2 text-green-600 dark:text-green-400 hover:text-green-800 dark:hover:text-green-200 focus:outline-none focus:ring-2 focus:ring-green-500 rounded-lg p-1 transition-colors" data-dismiss="alert" aria-label="Close">&times;</button>
              {{ successMessage }}
            </div>
          {% endif %}
          {% if renew %}
            <div class="rounded-xl border border-red-200 dark:border-red-900/50 bg-red-50 dark:bg-red-900/20 p-4" role="alert">
              <div class="flex flex-wrap items-center justify-between gap-3">
                <p class="m-0 text-sm font-medium text-red-800 dark:text-red-300">{{ renewMessage }}</p>
                <a href="{{ renewUrl }}" class="inline-flex items-center justify-center rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-dark-card px-3 py-1.5 text-xs font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-dark-tertiary focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 dark:focus:ring-offset-dark-secondary transition-colors" id="child-panels-renew">{{ lang('child_panel.button.renew') }}</a>
              </div>
            </div>
          {% endif %}
          {% if restore %}
            <div class="rounded-xl border border-red-200 dark:border-red-900/50 bg-red-50 dark:bg-red-900/20 p-4" role="alert">
              <div class="flex justify-end">
                <a href="{{ restoreUrl }}" class="inline-flex items-center justify-center rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-dark-card px-3 py-1.5 text-xs font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-dark-tertiary focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 dark:focus:ring-offset-dark-secondary transition-colors" id="child-panels-restore">{{ lang('child_panel.button.restore') }}</a>
              </div>
            </div>
          {% endif %}
        </div>
      {% endif %}

      {% if panelsList %}
        <div class="space-y-6">
          <!-- Desktop Table View -->
          <div class="hidden md:block overflow-x-auto rounded-lg border border-gray-200 dark:border-gray-700">
            <table id="service-table" cellspacing="0" class="w-full border-collapse {% if site['rtl'] %} rtl-table {% endif %}">
              <thead class="bg-gray-50 dark:bg-dark-tertiary">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-700 dark:text-gray-300 border-b border-gray-200 dark:border-gray-700">{{ lang('child_panel.domain') }}</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-700 dark:text-gray-300 border-b border-gray-200 dark:border-gray-700">{{ lang('child_panel.status') }}</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-700 dark:text-gray-300 border-b border-gray-200 dark:border-gray-700">{{ lang('child_panel.created') }}</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-700 dark:text-gray-300 border-b border-gray-200 dark:border-gray-700">{{ lang('child_panel.expiry') }}</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-700 dark:text-gray-300 border-b border-gray-200 dark:border-gray-700">{{ lang('child_panel.button.admin') }}</th>
                </tr>
              </thead>
              <tbody class="bg-white dark:bg-dark-secondary divide-y divide-gray-200 dark:divide-gray-700">
                {% for panel in panelsList %}
                  <tr class="hover:bg-gray-50 dark:hover:bg-dark-tertiary transition-colors duration-150">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-gray-100" data-label="{{ lang('child_panel.domain') }}">{{ panel['domain'] }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-300" data-label="{{ lang('child_panel.status') }}">{{ panel['status'] }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-300" data-label="{{ lang('child_panel.created') }}">{{ panel['created'] }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-300" data-label="{{ lang('child_panel.expiry') }}">{{ panel['expiry'] }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm" data-label="{{ lang('child_panel.button.admin') }}">
                      {% if panel['admin'] %}
                        <a href="{{ panel['admin_url'] }}" class="inline-flex items-center justify-center rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-dark-card px-3 py-1.5 text-xs font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-dark-tertiary focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 dark:focus:ring-offset-dark-secondary transition-colors" target="_blank">{{ lang('child_panel.button.admin') }}</a>
                      {% endif %}
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>

          <!-- Mobile Card View -->
          <div class="grid gap-4 md:hidden" role="list">
            {% for panel in panelsList %}
              <article class="bg-white dark:bg-dark-secondary rounded-xl border border-gray-200 dark:border-gray-700 p-5 shadow-sm transition-all duration-200 hover:shadow-md" role="listitem">
                <header class="flex items-start justify-between gap-4 mb-4">
                  <h3 class="text-base font-semibold text-gray-900 dark:text-gray-100 flex-1">{{ panel['domain'] }}</h3>
                  <span class="inline-flex items-center rounded-md px-2.5 py-0.5 text-xs font-medium bg-primary-100 dark:bg-primary-900/30 text-primary-800 dark:text-primary-300 whitespace-nowrap">{{ panel['status'] }}</span>
                </header>
                <dl class="grid grid-cols-2 gap-4 mb-4">
                  <div>
                    <dt class="text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">{{ lang('child_panel.created') }}</dt>
                    <dd class="text-sm text-gray-900 dark:text-gray-100">{{ panel['created'] }}</dd>
                  </div>
                  <div>
                    <dt class="text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">{{ lang('child_panel.expiry') }}</dt>
                    <dd class="text-sm text-gray-900 dark:text-gray-100">{{ panel['expiry'] }}</dd>
                  </div>
                </dl>
                {% if panel['admin'] %}
                  <div class="pt-4 border-t border-gray-200 dark:border-gray-700">
                    <a href="{{ panel['admin_url'] }}" class="w-full inline-flex items-center justify-center rounded-lg bg-primary-500/10 dark:bg-primary-500/20 text-primary-600 dark:text-primary-400 px-4 py-2 text-sm font-medium hover:bg-primary-500/20 dark:hover:bg-primary-500/30 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 dark:focus:ring-offset-dark-secondary transition-colors" target="_blank">{{ lang('child_panel.button.admin') }}</a>
                  </div>
                {% endif %}
              </article>
            {% endfor %}
          </div>
        </div>
      {% else %}
        <!-- Empty State -->
        <div class="flex flex-col items-center justify-center gap-4 rounded-xl border border-dashed border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-dark-card px-6 py-12 text-center">
          <svg width="60" height="60" viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg" class="text-primary-500 dark:text-primary-400" aria-hidden="true">
