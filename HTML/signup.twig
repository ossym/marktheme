<section class="bg-[#EBFAFE] dark:bg-[#0D0D0D] min-h-screen py-12 sm:py-16 lg:py-20 px-4 sm:px-6">
	<div class="container mx-auto max-w-4xl">
		<!-- Centered Form Card -->
		<div class="bg-white dark:bg-dark-secondary rounded-2xl shadow-xl dark:shadow-2xl border border-gray-100 dark:border-dark-tertiary p-6 sm:p-8 lg:p-10 transition-all duration-300 {% if site['rtl'] %} rtl-form {% endif %}">
			<!-- Header Section -->
			<div class="mb-6 sm:mb-8">
				<!-- Badge -->
				<div class="inline-flex items-center px-3 py-1.5 sm:px-4 sm:py-2 bg-[#EBFAFE] dark:bg-primary-900/30 border border-primary-200 dark:border-primary-500/30 rounded-full text-xs sm:text-sm font-medium text-primary-600 dark:text-primary-400 mb-4">
					<svg class="w-3 h-3 sm:w-4 sm:h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
						<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
					</svg>
					Sign Up
				</div>

				<!-- Main Heading -->
				<h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-[#3B5275] dark:text-slate-100 mb-3 leading-tight">
					Are You Ready for This Journey?
				</h1>

				<!-- Description -->
				<p class="text-sm sm:text-base text-[#3B5275] dark:text-slate-300">
					Sign up Now! Must use <b>VALID</b> billing email.
				</p>
			</div>

			<form class="signIn_form w-full space-y-5" method="post" action="">
				<!-- Error Alert -->
				{% if error %}
				<div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg flex items-center justify-between {% if site['rtl'] %} rtl-alert {% endif %}" role="alert" aria-live="assertive" aria-atomic="true">
					<div class="flex items-center">
						<svg class="w-5 h-5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
						</svg>
						<span>{{ errorMessage }}</span>
					</div>
					<button type="button" class="text-red-500 hover:text-red-700 focus:outline-none flex-shrink-0" onclick="this.closest('.bg-red-50').remove()" aria-label="Close error message">
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
							<path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
						</svg>
					</button>
				</div>
				{% endif %}

				<!-- Success Alert -->
				{% if success %}
				<div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg flex items-center justify-between {% if site['rtl'] %} rtl-alert {% endif %}" role="alert" aria-live="polite" aria-atomic="true">
					<div class="flex items-center">
						<svg class="w-5 h-5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
						</svg>
						<span>{{ successText }}</span>
					</div>
					<button type="button" class="text-green-500 hover:text-green-700 focus:outline-none flex-shrink-0" onclick="this.closest('.bg-green-50').remove()" aria-label="Close success message">
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
							<path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
						</svg>
					</button>
				</div>
				{% endif %}

				<!-- Username Field -->
				<div class="input-field">
					<label for="username" class="sr-only">{{ lang('signup.username') }}</label>
					<div class="relative">
						<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none" aria-hidden="true">
							<div class="rounded-md bg-primary-500 p-2">
								<svg width="20" height="20" viewBox="0 0 22 29" fill="none" xmlns="http://www.w3.org/2000/svg">
									<path d="M21.6693 28.332H0.335938V25.6654C0.335938 21.9835 3.32071 18.9987 7.0026 18.9987H15.0026C18.6845 18.9987 21.6693 21.9835 21.6693 25.6654V28.332ZM11.0026 16.332C6.58432 16.332 3.0026 12.7503 3.0026 8.33203C3.0026 3.91375 6.58432 0.332031 11.0026 0.332031C15.4209 0.332031 19.0026 3.91375 19.0026 8.33203C19.0026 12.7503 15.4209 16.332 11.0026 16.332Z" fill="white"></path>
								</svg>
							</div>
						</div>
						<input 
							type="text" 
							id="username" 
							name="RegistrationForm[login]" 
							value="{{ data['login'] }}"
							required
							autocomplete="username"
							aria-required="true"
							class="appearance-none relative block w-full pl-14 pr-3 py-3 border border-primary-200 dark:border-primary-500/30 placeholder-gray-400 dark:placeholder-slate-500 text-gray-900 dark:text-slate-100 dark:bg-dark-tertiary rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
							placeholder="{{ lang('signup.username') }}"
						>
					</div>
				</div>

				<!-- Form Fields Grid (Two Columns) -->
				<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
					<!-- Email Field -->
					<div class="input-field">
						<label for="email" class="sr-only">{{ lang('signup.email') }}</label>
						<div class="relative">
							<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none" aria-hidden="true">
								<div class="rounded-md bg-primary-500 p-2">
									<svg width="20" height="18" viewBox="0 0 20 18" fill="none" xmlns="http://www.w3.org/2000/svg">
										<path d="M1 0H19C19.5523 0 20 0.44772 20 1V17C20 17.5523 19.5523 18 19 18H1C0.44772 18 0 17.5523 0 17V1C0 0.44772 0.44772 0 1 0ZM18 4.23792L10.0718 11.338L2 4.21594V16H18V4.23792ZM2.51146 2L10.0619 8.662L17.501 2H2.51146Z" fill="white"/>
									</svg>
								</div>
							</div>
							<input 
								type="email" 
								id="email" 
								name="RegistrationForm[email]" 
								value="{{ data['email'] }}"
								required
								autocomplete="email"
								aria-required="true"
								class="appearance-none relative block w-full pl-14 pr-3 py-3 border border-primary-200 dark:border-primary-500/30 placeholder-gray-400 dark:placeholder-slate-500 text-gray-900 dark:text-slate-100 dark:bg-dark-tertiary rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
								placeholder="{{ lang('signup.email') }}"
							>
						</div>
					</div>

					<!-- Password Field -->
					<div class="input-field">
						<label for="password" class="sr-only">{{ lang('signup.password') }}</label>
						<div class="relative">
							<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none" aria-hidden="true">
								<div class="rounded-md bg-primary-500 p-2">
									<svg width="19" height="18" viewBox="0 0 19 18" fill="none" xmlns="http://www.w3.org/2000/svg">
