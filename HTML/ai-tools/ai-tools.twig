<!-- AI Tools Library Section -->
<main class="relative bg-gray-50 dark:bg-dark transition-colors duration-300">
    <section class="py-12 sm:py-16 lg:py-20" id="ai-tools-library">
        {% for network in networks %}
            <section class="mb-16 sm:mb-20 last:mb-0" style="--accent-color: {{ network.color }}; --accent-color-soft: {{ network.soft_color }};">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    <!-- Network Header -->
                    <div class="text-center mb-10 sm:mb-12">
                        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-slate-100 mb-4 sm:mb-6 leading-tight">
                            {{ network.name }} <span class="text-primary-500 dark:text-primary-400">AI Tools</span>
                        </h2>
                        <p class="text-base sm:text-lg text-gray-700 dark:text-slate-300 max-w-3xl mx-auto leading-relaxed">
                            {{ network.description }}
                        </p>
                    </div>

                    <!-- Tools Grid -->
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
                        {% for tool in network.tools %}
                            <article class="bg-white dark:bg-dark-secondary rounded-xl shadow-lg dark:shadow-xl p-6 sm:p-8 transition-all duration-300 hover:shadow-xl dark:hover:shadow-2xl hover:border-primary-200 dark:hover:border-primary-500/30 border border-transparent dark:border-dark-tertiary group">
                                <!-- Icon -->
                                <div class="w-12 h-12 sm:w-14 sm:h-14 rounded-lg flex items-center justify-center mb-4 sm:mb-6 transition-all duration-300 group-hover:scale-110" style="background-color: var(--accent-color-soft);">
                                    <i class="{% if network.icon_type == 'solid' %}fas{% else %}fab{% endif %} {{ network.icon }} text-2xl sm:text-3xl" style="color: var(--accent-color);" aria-hidden="true"></i>
                                    <span class="sr-only">{{ network.name }}</span>
                                </div>

                                <!-- Title -->
                                <h4 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-slate-100 mb-3 sm:mb-4 group-hover:text-primary-500 dark:group-hover:text-primary-400 transition-colors duration-200">
                                    <a class="ai-tools__tool-link hover:no-underline" href="{{ tool.url }}">
                                        <span>{{ tool.title }}</span>
                                    </a>
                                </h4>

                                <!-- Description -->
                                <p class="text-base text-gray-700 dark:text-slate-300 leading-relaxed">
                                    {{ tool.description }}
                                </p>
                            </article>
                        {% endfor %}
                    </div>
                </div>
            </section>
        {% endfor %}
    </section>
</main>
