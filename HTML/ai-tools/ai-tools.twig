    <section class="ai-tools__section" id="ai-tools-library">
      {% for network in networks %}
        <section class="ai-tools__category" style="--accent-color: {{ network.color }}; --accent-color-soft: {{ network.soft_color }};">
          <div class="container mx-auto">
            <h2 class="home-title ai-tools__section-title">{{ network.name }} <span>AI Tools</span></h2>
            <p class="home-p ai-tools__section-description">
              {{ network.description }}
            </p>
          </div>

          <div class="container relative mx-auto ai-tools__grid">
            {% for tool in network.tools %}
              <article class="ai-tools__card">
                <div class="ai-tools__icon">
                  <i class="{% if network.icon_type == 'solid' %}fas{% else %}fab{% endif %} {{ network.icon }}" aria-hidden="true"></i>
                  <span class="sr-only">{{ network.name }}</span>
                </div>
                <h4 class="ai-tools__card-title">
                  <a class="ai-tools__tool-link" href="{{ tool.url }}"><span>{{ tool.title }}</span></a>
                </h4>
                <p class="ai-tools__card-description">
                  {{ tool.description }}
                </p>
              </article>
            {% endfor %}
          </div>
        </section>
      {% endfor %}
    </section>
  </main>
