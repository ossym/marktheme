<script src="https://ai-tools-phi.vercel.app/js/ai-client.js"></script>
<script>
document.addEventListener('DOMContentLoaded', () => {
  const ai = AIClient.create({
    apiUrl: 'https://ai-tools-phi.vercel.app/api/ai'
  });

  const input     = document.getElementById('userInput');
  const lang      = document.getElementById('languageSelect');
  const btn       = document.getElementById('generateContentButton');
  const loader    = document.getElementById('customLoader');
  const textarea  = document.getElementById('generatedContentTextarea');
  const outputBox = document.getElementById('customGeneratedContent');

  const show = el => el.style.display = 'block';
  const hide = el => el.style.display = 'none';
  hide(loader); hide(textarea);

  btn.addEventListener('click', async () => {
    const topic = (input.value || '').trim();
    const language = lang.value || 'English';

    if (!topic) return alert('Please enter some text.');

    btn.disabled = true;
    show(loader);
    hide(textarea);
    textarea.value = '';

    try {
      const ideas = await ai.run('youtube_ideas', { topic, language, count: 5 });
      textarea.value = ideas;
      show(textarea);
    } catch (err) {
      outputBox.innerText = 'Error: ' + (err.message || err);
    } finally {
      btn.disabled = false;
      hide(loader);
    }
  });
});
</script>
