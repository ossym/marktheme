<script>
document.addEventListener('DOMContentLoaded', () => {
  const ai = AIClient.create({
    apiUrl: 'https://ai-tools-phi.vercel.app/api/ai'
  });

  const input     = document.getElementById('userInput');
  const lang      = document.getElementById('languageSelect');
  const btn       = document.getElementById('generateContentButton');
  const loader    = document.getElementById('customLoader');
  const textarea  = document.getElementById('generatedContentTextarea');
  const outputBox = document.getElementById('customGeneratedContent');

  const show = el => el.style.display = 'block';
  const hide = el => el.style.display = 'none';
  hide(loader); hide(textarea);

  btn.addEventListener('click', async () => {
    const topic = (input.value || '').trim();
    const language = lang.value || 'English';

    if (!topic) return alert('Please enter some text.');

    btn.disabled = true;
    show(loader);
    hide(textarea);
    textarea.value = '';

    try {
      const ideas = await ai.run('youtube_ideas', { topic, language, count: 5 });
      textarea.value = ideas;
      show(textarea);
    } catch (err) {
      outputBox.innerText = 'Error: ' + (err.message || err);
    } finally {
      btn.disabled = false;
      hide(loader);
    }
  });

  // FAQ Accordion functionality
  document.querySelectorAll('.faq-question').forEach(button => {
    button.addEventListener('click', () => {
      const faqId = button.getAttribute('data-faq');
      const answer = document.getElementById(`faq-answer-${faqId}`);
      const icon = button.querySelector('.faq-icon');
      const isExpanded = button.getAttribute('aria-expanded') === 'true';

      // Close all other FAQs
      document.querySelectorAll('.faq-item').forEach(item => {
        const otherButton = item.querySelector('.faq-question');
        const otherAnswer = item.querySelector('.faq-answer');
        const otherIcon = otherButton.querySelector('.faq-icon');
        if (otherButton !== button) {
          otherButton.setAttribute('aria-expanded', 'false');
          otherAnswer.classList.add('hidden');
          otherAnswer.classList.remove('block');
          otherIcon.classList.remove('rotate-45');
          const otherItem = item;
          otherItem.classList.remove('border-2', 'border-primary-200', 'dark:border-primary-500/30');
          otherItem.classList.add('border', 'border-gray-200', 'dark:border-dark-tertiary');
          otherButton.querySelector('span').classList.remove('font-semibold', 'text-gray-900', 'dark:text-slate-100');
          otherButton.querySelector('span').classList.add('font-medium', 'text-gray-700', 'dark:text-slate-300');
        }
      });

      // Toggle current FAQ
      if (isExpanded) {
        button.setAttribute('aria-expanded', 'false');
        answer.classList.add('hidden');
        answer.classList.remove('block');
        icon.classList.remove('rotate-45');
        icon.classList.add('text-gray-400');
        const item = button.closest('.faq-item');
        item.classList.remove('border-2', 'border-primary-200', 'dark:border-primary-500/30');
        item.classList.add('border', 'border-gray-200', 'dark:border-dark-tertiary');
        button.querySelector('span').classList.remove('font-semibold', 'text-gray-900', 'dark:text-slate-100');
        button.querySelector('span').classList.add('font-medium', 'text-gray-700', 'dark:text-slate-300');
      } else {
        button.setAttribute('aria-expanded', 'true');
        answer.classList.remove('hidden');
        answer.classList.add('block');
        icon.classList.add('rotate-45');
        icon.classList.remove('text-gray-400');
        icon.classList.add('text-primary-500');
        const item = button.closest('.faq-item');
        item.classList.remove('border', 'border-gray-200', 'dark:border-dark-tertiary');
        item.classList.add('border-2', 'border-primary-200', 'dark:border-primary-500/30');
        button.querySelector('span').classList.remove('font-medium', 'text-gray-700', 'dark:text-slate-300');
        button.querySelector('span').classList.add('font-semibold', 'text-gray-900', 'dark:text-slate-100');
      }
    });
  });
});
</script>
