{% if posts %}
	<section class="p-0">
		<div class="relative flex overflow-hidden bg-gradient-to-br from-[#0A2753] to-[#1a3d6b] dark:from-dark dark:to-dark-secondary transition-all duration-300">
			<!-- Decorative Background Elements -->
			<div class="absolute inset-0 overflow-hidden pointer-events-none">
				<div class="absolute top-0 right-0 w-96 h-96 bg-primary-500/10 rounded-full blur-3xl"></div>
				<div class="absolute bottom-0 left-0 w-96 h-96 bg-accent-500/10 rounded-full blur-3xl"></div>
			</div>
			<svg class="absolute -bottom-[50%] left-0 md:-bottom-[10%] lg:bottom-0 opacity-30 dark:opacity-20 transition-opacity duration-300" width="488" height="306" viewbox="0 0 488 306" fill="none" xmlns="http://www.w3.org/2000/svg">
				<path d="M-158.855 18.8875C-117.176 -5.17616 -65.8243 -5.17616 -24.1448 18.8875L420.083 275.362C461.762 299.426 487.438 343.898 487.438 392.025V904.975C487.438 953.102 461.762 997.574 420.083 1021.64L-24.1448 1278.11C-65.8243 1302.18 -117.176 1302.18 -158.855 1278.11L-603.083 1021.64C-644.762 997.574 -670.438 953.102 -670.438 904.975V392.025C-670.438 343.898 -644.762 299.426 -603.083 275.362L-158.855 18.8875Z" fill="url(#paint0_linear_6163_12011)"/>
				<defs>
					<linearGradient id="paint0_linear_6163_12011" x1="397.5" y1="-111" x2="-6.50001" y2="541.5" gradientUnits="userSpaceOnUse">
						<stop stop-color="#3B5275"/>
						<stop offset="1" stop-color="#0A2753"/>
					</linearGradient>
				</defs>
			</svg>
			<div class="container mx-auto relative z-10">
				<div class="flex flex-col lg:flex-row justify-between items-center gap-8 lg:gap-12 py-12 md:py-16 lg:py-20">
					<div class="flex flex-col justify-center space-y-4 lg:space-y-6 flex-1 max-w-2xl">
						<span class="inline-flex items-center w-fit px-4 py-2 bg-primary-500/20 dark:bg-primary-500/30 backdrop-blur-sm border border-primary-400/30 dark:border-primary-400/50 rounded-full text-sm font-semibold text-primary-200 dark:text-primary-300">
							<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
							</svg>
							Blog
						</span>
						<h1 class="z-10 text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold leading-tight text-white">
							Stay Updated with Our Latest Blog
						</h1>
						<p class="text-base md:text-lg text-gray-200 dark:text-gray-300 leading-relaxed">
							<strong class="font-semibold text-white">Welcome to Our Blog!</strong>
							We're excited to have you here. This is your go-to source for insights on digital marketing, social media strategies, and the latest industry trends. 
							Whether you're a seasoned marketer or just starting your journey, our blog aims to provide valuable tips, industry updates, and expert advice to help you grow your business.
						</p>
					</div>
					<div class="hidden lg:block shrink-0 basis-1/2 relative">
						<img class="w-full h-auto object-contain animate-pulse-slow" src="https://storage.perfectcdn.com/7gc9nb/bb4duzhpy7bwtc7t.png" alt="Blog illustration"/>
					</div>
				</div>
			</div>
		</div>
		<main class="container relative mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12 lg:py-16">
			<!-- Blog Header Section -->
			<section class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-8 md:mb-12">
				<div>
					<h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-2">Latest Blog Posts</h2>
					<p class="text-gray-600 dark:text-gray-400 text-sm md:text-base max-w-2xl">
						By keeping up-to-date with the latest news, you can stay informed, make strategic decisions, and take advantage of emerging opportunities in your industry. 
						Visit our blog regularly for insights and updates on what's happening across the digital landscape.
					</p>
				</div>
				<form class="flex-shrink-0">
					<select class="px-4 py-2.5 bg-white dark:bg-dark-secondary border border-gray-300 dark:border-dark-tertiary rounded-lg text-gray-900 dark:text-gray-100 text-sm font-medium focus:outline-none focus:ring-2 focus:ring-primary-500 dark:focus:ring-primary-400 focus:border-transparent transition-colors cursor-pointer appearance-none bg-[url('data:image/svg+xml,%3csvg xmlns=\'http://www.w3.org/2000/svg\' fill=\'none\' viewBox=\'0 0 20 20\'%3e%3cpath stroke=\'%236b7280\' stroke-linecap=\'round\' stroke-linejoin=\'round\' stroke-width=\'1.5\' d=\'M6 8l4 4 4-4\'/%3e%3c/svg%3e')] bg-[length:1.25em_1.25em] bg-[right_0.75rem_center] bg-no-repeat pr-10">
						<option value="">Newest First</option>
					</select>
				</form>
			</section>
          
			{% if posts %}
				<section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
					{% for post in posts %}
						<article class="group bg-white dark:bg-dark-secondary rounded-xl shadow-sm border border-gray-200 dark:border-dark-tertiary overflow-hidden transition-all duration-300 hover:shadow-lg hover:border-primary-500/50 dark:hover:border-primary-400/50">
							{% if post['image'] %}
								<div class="relative overflow-hidden">
									<img class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-105" src="{{ post['image'] }}" alt="{{ post['title'] }}"/>
									<div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
								</div>
							{% endif %}
							<div class="p-6">
								<div class="flex items-center gap-2 mb-4">
									<span class="text-sm text-gray-500 dark:text-gray-400">By</span>
									<span class="text-sm font-semibold text-primary-600 dark:text-primary-400">Marketerum</span>
								</div>
								<h3 class="mb-4 text-xl md:text-2xl font-bold text-gray-900 dark:text-white line-clamp-2 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
									<a href="{{ page_url('blog') }}/{{ post['url'] }}">{{ post['title'] }}</a>
								</h3>
								<p class="mb-6 text-gray-600 dark:text-gray-400 text-sm md:text-base line-clamp-3 blog-excerpt"></p>
								<a class="inline-flex items-center gap-2 px-6 py-3 rounded-lg border-2 border-accent-500 text-accent-600 dark:text-accent-400 font-semibold text-sm transition-all duration-200 hover:bg-accent-500 hover:text-white dark:hover:bg-accent-600 dark:hover:text-white group-hover:shadow-md" href="{{ page_url('blog') }}/{{ post['url'] }}">
									<span>{{ lang('blog.link') }}</span>
									<svg class="w-4 h-4 transition-transform duration-200 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
									</svg>
								</a>
							</div>
						</article>
					{% endfor %}
				</section>
			{% endif %}
			
			<!-- Decorative Elements -->
			<div class="hidden lg:block pointer-events-none">
				<img class="absolute -left-[60px] top-[35%] w-24 opacity-30 dark:opacity-20 transition-opacity duration-300" src="https://storage.perfectcdn.com/7gc9nb/i57t5mc7bq1muet2.png" alt=""/>
				<img class="absolute -right-[25px] bottom-[25%] w-24 opacity-30 dark:opacity-20 transition-opacity duration-300" src="https://storage.perfectcdn.com/7gc9nb/or4prtit7r7hi8n2.svg" alt=""/>
				<img class="absolute left-1/2 -bottom-14 -translate-x-1/2 w-24 opacity-30 dark:opacity-20 transition-opacity duration-300" src="https://storage.perfectcdn.com/7gc9nb/hjlhz1rz00ktb1di.png" alt=""/>
			</div>
		</main>
	</section>
{% endif %}

{% if pagination['count'] > 10 %}
	<section class="flex items-center justify-center gap-2 py-8 md:py-12">
		{% set r, l = 3, 3 %}
		{% if pagination['current'] == 1 %}
			{% set r = 6 %}
		{% endif %}
		{% if pagination['current'] == 2 %}
			{% set r = 5 %}
		{% endif %}
		{% if pagination['current'] >= pagination['pages'] %}
			{% set l = 5 %}
		{% endif %}
		
		{% if pagination['current'] != 1 %}
			<a href="{{ page['url'] }}{% if pagination['last'] %}?page={{ pagination['last'] }}{% endif %}" class="flex w-12 h-12 items-center justify-center rounded-full border-2 border-primary-500 dark:border-primary-400 text-primary-600 dark:text-primary-400 hover:bg-primary-500 dark:hover:bg-primary-600 hover:text-white transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 dark:focus:ring-offset-dark-secondary">
				<svg class="w-5 h-5" viewBox="0 0 12 20" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M10.3281 1.33398L1.66146 10.0007L10.3281 18.6673" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
				</svg>
				<span class="sr-only">Previous page</span>
			</a>
		{% endif %}
		
		<div class="flex items-center gap-1 md:gap-2">
			{% for i in 1..ceil(pagination['pages']) %}
				{% if i >= (pagination['current']-l) and i <= (pagination['current']+r) %}
					<a href="{{ page['url'] }}{% if i != 1 %}?page={{ i }}{% endif %}" class="flex w-10 h-10 md:w-12 md:h-12 items-center justify-center rounded-lg font-semibold text-sm md:text-base transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 dark:focus:ring-offset-dark-secondary {% if i == pagination['current'] %} bg-gradient-to-r from-primary-500 to-primary-600 text-white shadow-md {% else %} border-2 border-gray-300 dark:border-dark-tertiary text-gray-700 dark:text-gray-300 hover:border-primary-500 dark:hover:border-primary-400 hover:text-primary-600 dark:hover:text-primary-400 {% endif %}">
						{{ i }}
					</a>
				{% endif %}
			{% endfor %}
		</div>
		
		{% if pagination['current'] < pagination['pages'] %}
			<a href="{{ page['url'] }}{% if pagination['next'] %}?page={{ pagination['next'] }}{% endif %}" class="flex w-12 h-12 items-center justify-center rounded-full border-2 border-primary-500 dark:border-primary-400 text-primary-600 dark:text-primary-400 hover:bg-primary-500 dark:hover:bg-primary-600 hover:text-white transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 dark:focus:ring-offset-dark-secondary">
				<svg class="w-5 h-5" viewBox="0 0 12 20" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M1.67188 18.666L10.3385 9.99935L1.67188 1.33268" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
				</svg>
				<span class="sr-only">Next page</span>
			</a>
		{% endif %}
	</section>
{% endif %}
