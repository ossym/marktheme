<main class="shrink grow space-y-6 px-4 py-6 sm:px-6 lg:px-8">
  <section class="rounded-2xl border border-gray-200 bg-white p-4 shadow-sm transition-all duration-300 dark:border-gray-700 dark:bg-gray-800 sm:p-6">
    <div class="mb-4 flex flex-wrap items-center gap-3 sm:mb-6">
      <a href="{{ page['url'] }}" class="inline-flex items-center rounded-lg bg-gradient-to-r from-cyan-500 to-teal-500 px-4 py-2 text-sm font-semibold text-white shadow-md transition-all duration-200 hover:from-cyan-600 hover:to-teal-600 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:ring-offset-2 dark:from-cyan-400 dark:to-teal-400 dark:hover:from-cyan-500 dark:hover:to-teal-500">
        All updates
      </a>
    </div>
    <form action="{{ page['url'] }}" method="get" id="history-search" class="flex flex-col gap-3 sm:flex-row" role="search">
      <label for="updates-search-input" class="sr-only">Search updates</label>
      <div class="relative flex-1">
        <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
          <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </div>
        <input
          type="text"
          id="updates-search-input"
          name="search"
          value="{{ search }}"
          class="block w-full rounded-xl border border-gray-300 bg-white py-3 pl-10 pr-4 text-sm text-gray-900 placeholder-gray-500 shadow-sm transition-all duration-200 focus:border-cyan-500 focus:outline-none focus:ring-2 focus:ring-cyan-500/30 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 dark:placeholder-gray-400 dark:focus:border-cyan-400 dark:focus:ring-cyan-400/30"
          placeholder="Search by name, ID or keyword"
        >
      </div>
      <button type="submit" class="inline-flex items-center justify-center rounded-xl bg-gradient-to-r from-cyan-600 to-teal-600 px-6 py-3 text-sm font-semibold text-white shadow-md transition-all duration-200 hover:from-cyan-700 hover:to-teal-700 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:ring-offset-2 dark:from-cyan-500 dark:to-teal-500 dark:hover:from-cyan-600 dark:hover:to-teal-600">
        <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        Search
      </button>
    </form>
  </section>

  <section class="rounded-2xl border border-gray-200 bg-white p-4 shadow-sm transition-all duration-300 dark:border-gray-700 dark:bg-gray-800 sm:p-6" id="status-table">
    {% if updatesList %}
      <div class="relative space-y-6" role="list">
        {% for update in updatesList %}
          <article class="group relative flex gap-4 transition-all duration-200 hover:translate-x-1" role="listitem">
            <div class="flex flex-col items-center">
              <span class="absolute top-2 h-3 w-3 rounded-full bg-gradient-to-r from-cyan-500 to-teal-500 ring-4 ring-white dark:ring-gray-800" aria-hidden="true"></span>
              {% if not loop.last %}
                <div class="mt-5 h-full w-0.5 bg-gradient-to-b from-cyan-200 to-teal-200 dark:from-cyan-800 dark:to-teal-800"></div>
              {% endif %}
            </div>
            <div class="flex-1 rounded-xl border border-gray-200 bg-gray-50 p-4 transition-all duration-200 hover:border-cyan-300 hover:bg-white hover:shadow-md dark:border-gray-700 dark:bg-gray-900/50 dark:hover:border-cyan-600 dark:hover:bg-gray-800 sm:p-5">
              <header class="mb-3 flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
                <div class="flex flex-wrap items-center gap-2">
                  <span class="inline-flex items-center rounded-md bg-gradient-to-r from-cyan-500 to-teal-500 px-2.5 py-0.5 text-xs font-bold text-white shadow-sm">#{{ update['service_id'] }}</span>
                  <span class="text-sm font-semibold text-gray-900 dark:text-gray-100">{{ update['service'] }}</span>
                </div>
                <span class="text-xs font-medium text-gray-500 dark:text-gray-400 sm:text-sm">{{ update['date'] }}</span>
              </header>
              <p class="text-sm leading-relaxed text-gray-700 dark:text-gray-300">{{ update['update'] }}</p>
            </div>
          </article>
        {% endfor %}
      </div>
    {% else %}
      <div class="flex flex-col items-center justify-center py-12 text-center sm:py-16">
        <div class="mb-6 flex h-20 w-20 items-center justify-center rounded-full bg-cyan-100 dark:bg-cyan-900/30" aria-hidden="true">
          <svg width="56" height="56" viewBox="0 0 56 56" fill="none" xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-cyan-600 dark:text-cyan-400">
            <rect opacity="0.2" x="4" y="8" width="48" height="36" rx="10" fill="currentColor"/>
            <path d="M38 26H18" stroke="currentColor" stroke-width="3" stroke-linecap="round"/>
            <path d="M28 34H18" stroke="currentColor" stroke-width="3" stroke-linecap="round"/>
          </svg>
        </div>
        <h2 class="mb-2 text-2xl font-bold text-gray-900 dark:text-gray-100">You&apos;re all caught up</h2>
        <p class="mb-6 max-w-md text-sm text-gray-600 dark:text-gray-400">We couldn&apos;t find any updates that match your filters. Try adjusting your search terms to explore more news.</p>
        {% if search %}
          <a href="{{ page['url'] }}" class="inline-flex items-center justify-center rounded-xl bg-gradient-to-r from-cyan-600 to-teal-600 px-6 py-3 text-sm font-semibold text-white shadow-md transition-all duration-200 hover:from-cyan-700 hover:to-teal-700 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:ring-offset-2 dark:from-cyan-500 dark:to-teal-500 dark:hover:from-cyan-600 dark:hover:to-teal-600">
            Clear search
          </a>
        {% endif %}
      </div>
    {% endif %}

    {% if pagination['count'] > 100 %}
      {% if search %}
        {% set params = {} %}
        {% set params = params | merge(['search=' ~ search]) %}
        {% set params = '?' ~ params|join('&') %}
      {% endif %}
      <nav class="mt-8 flex items-center justify-center" aria-label="Updates pagination">
        <ul class="flex flex-wrap items-center gap-2 {% if site['rtl'] %} flex-row-reverse {% endif %}">
          {% if pagination['current'] != 1 %}
            <li>
              <a href="{{ page['url'] }}{{ type.key != 'all' ? '/' ~ type.key : '' }}{{ pagination['prev'] > 1 ? '/' ~ pagination['prev'] : '' }}{{ params }}" 
                 class="inline-flex h-10 w-10 items-center justify-center rounded-lg border border-gray-300 bg-white text-sm font-medium text-gray-700 transition-all duration-200 hover:border-cyan-500 hover:bg-cyan-50 hover:text-cyan-700 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:ring-offset-2 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-300 dark:hover:border-cyan-400 dark:hover:bg-cyan-900/30 dark:hover:text-cyan-300 dark:focus:ring-cyan-400" 
                 aria-label="Previous page">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
          {% endif %}

          {% set r, l = 3, 3 %}

          {% if pagination['current'] == 1 %}
            {% set r = 6 %}
          {% endif %}

          {% if pagination['current'] == 2 %}
            {% set r = 5 %}
          {% endif %}

          {% if pagination['current'] >= pagination['pages'] %}
            {% set l = 5 %}
          {% endif %}

          {% for i in 1..ceil(pagination['pages']) %}
            {% if i >= (pagination['current']-l) and i <= (pagination['current']+r) %}
              <li>
                <a href="{{ page['url'] }}{{ type.key != 'all' ? '/' ~ type.key : '' }}{{ i > 1 ? '/' ~ i : '' }}{{ params }}" 
                   class="inline-flex h-10 w-10 items-center justify-center rounded-lg border text-sm font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 {% if i == pagination['current'] %} border-cyan-500 bg-gradient-to-r from-cyan-500 to-teal-500 text-white shadow-md ring-cyan-500 dark:from-cyan-400 dark:to-teal-400 dark:ring-cyan-400 {% else %} border-gray-300 bg-white text-gray-700 hover:border-cyan-500 hover:bg-cyan-50 hover:text-cyan-700 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-300 dark:hover:border-cyan-400 dark:hover:bg-cyan-900/30 dark:hover:text-cyan-300 dark:focus:ring-cyan-400 {% endif %}">
                  {{ i }}
                </a>
              </li>
            {% endif %}
          {% endfor %}

          {% if pagination['current'] < pagination['pages'] %}
            <li>
              <a href="{{ page['url'] }}{{ type.key != 'all' ? '/' ~ type.key : '' }}/{{ pagination['next'] }}{{ params }}" 
                 class="inline-flex h-10 w-10 items-center justify-center rounded-lg border border-gray-300 bg-white text-sm font-medium text-gray-700 transition-all duration-200 hover:border-cyan-500 hover:bg-cyan-50 hover:text-cyan-700 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:ring-offset-2 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-300 dark:hover:border-cyan-400 dark:hover:bg-cyan-900/30 dark:hover:text-cyan-300 dark:focus:ring-cyan-400" 
                 aria-label="Next page">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          {% endif %}
        </ul>
      </nav>
    {% endif %}
  </section>
</main>
